                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="left"/>

            <TextView
                android:hint=""
                android:id="@+id/lapan"
                android:textSize="14dp"
                android:textStyle="italic"
